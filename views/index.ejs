<html>
  <head>
    <!-- <link rel="stylesheet" href="/styles.css"> -->
    <title>%= title %></title>
  </head>
  <body>
    <ul>
        <% messages.forEach((message) => { %>
            <%- `"${message.text}" - ${message.user}, ${message.added}` %>
            <a href="/messageDetails/<%= message.id%>">Open</a>
        <% }); %>
    </ul>

    <a href="/new">New Message</a>
  </body>
</html>
